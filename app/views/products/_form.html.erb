    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control", rows: "5" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", rows: "5" %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, @categories.each {|item| [item]}%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
